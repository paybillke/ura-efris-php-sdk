{
  "name": "paybilldev/ura-efris-sdk",
  "description": "PHP SDK for Uganda Revenue Authority (URA) EFRIS System-to-System (S2S) API integration",
  "type": "library",
  "license": "MIT",

  "keywords": [
    "ura",
    "efris",
    "uganda",
    "tax",
    "einvoicing",
    "fiscal",
    "sdk",
    "api"
  ],

  "authors": [
    {
      "name": "Emmanuel Bartile",
      "email": "support@paybill.dev",
      "role": "Lead Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "UraEfrisSdk\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "UraEfrisSdk\\Tests\\": "tests/"
    }
  },

  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-openssl": "*",
    "respect/validation": "^2.4",
    "guzzlehttp/guzzle": "^7.0",
    "psr/log": "^3.0"
  },

  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.10",
    "mockery/mockery": "^1.6"
  },

  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse",
    "format": "php-cs-fixer fix"
  },

  "extra": {
    "branch-alias": {
      "dev-main": "0.1-dev"
    }
  },

  "minimum-stability": "stable",
  "prefer-stable": true
}
